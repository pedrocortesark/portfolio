<Window x:Class="WPF.Start.Views.BaseMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Start.Views"
        mc:Ignorable="d"
        Title="BaseMenu" Height="600" Width="1200">
    <Grid>
        
        <TabControl>

            <TabItem Header="Students">
                <local:StudentsViewUC/>
            </TabItem>
            
            <TabItem Header="Subjects">
                <local:SubjectViewUC/>
            </TabItem>

            <TabItem Header="Teachers">
                <local:TeacherViewUC/>
            </TabItem>

            <TabItem Header="Exams">
                <local:ExamViewUC/>
            </TabItem>

            <TabItem Header="Statistics">
                <local:StatisticsViewUC/>
            </TabItem>

        </TabControl>
        
    </Grid>
</Window>
